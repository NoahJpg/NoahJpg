@{
  Layout = "_Layout";
}

@using ToDoList.Models;

<h1>Restaurants</h1><hr>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

<ul>
  @foreach(Category category in Model)
  {
    <li>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</li>
  }
</ul>
<hr>
<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Add new cuisine", "Create", "Items")</p>